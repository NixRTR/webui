# PostgreSQL Configuration
POSTGRES_DB=router_webui
POSTGRES_USER=router_webui
POSTGRES_PASSWORD=changeme-please-use-strong-password

# Redis Configuration
REDIS_DB=0
REDIS_PASSWORD=

# JWT Authentication
JWT_SECRET_KEY=change-this-in-production-generate-with-openssl-rand-hex-32
JWT_SECRET_FILE=
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440

# Server Configuration
DEBUG=false
WEB_PORT=8080

# System Paths (for Docker volume mounts)
# These are the paths INSIDE the container
KEA_LEASE_FILE=/var/lib/kea/dhcp4.leases
ROUTER_CONFIG_FILE=/etc/nixos/router-config.nix
UNBOUND_CONTROL_PATH=/run/unbound/control

# Host paths for volume mounts (paths on your host system)
# Leave empty if you don't want to mount these paths
KEA_LEASE_DIR=/var/lib/kea
ROUTER_CONFIG_DIR=/etc/nixos
UNBOUND_RUN_DIR=/run/unbound
PAM_CONFIG_DIR=/etc/pam.d
SHADOW_FILE=/etc/shadow

# Data Collection
COLLECTION_INTERVAL=5
COLLECTION_INTERVAL_NORMAL=5
COLLECTION_INTERVAL_THROTTLED=10

# CORS (not needed in Docker, but can be configured)
CORS_ORIGINS=[]
